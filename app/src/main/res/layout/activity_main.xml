<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ehuaranga.clase3.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Producto"
            android:gravity="center_horizontal"/>

        <EditText
            android:id="@+id/edittext_barcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Codigo de barra"/>

        <EditText
            android:id="@+id/edittext_nombre_producto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del producto"/>

        <EditText
            android:id="@+id/edittext_precio_producto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Precio del producto"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comprador"
            android:gravity="center_horizontal"/>

        <EditText
            android:id="@+id/edittext_nombre_comprador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre comprador"/>

        <EditText
            android:id="@+id/edittext_dni_comprador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="DNI"/>

        <EditText
            android:id="@+id/edittext_nacionalidad_comprador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nacionalidad"/>
    </LinearLayout>

</LinearLayout>
